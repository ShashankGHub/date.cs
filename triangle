using System;
namespace SampleCode
{
	class Program
    {

static void Main(string[] args)
{
int tri = 5; 
for (int i = 1; i<= tri; i++)
{
	for (int j= 1; j < (tri - i); j++)
      Console.Write(" ");	
		for (int t = 1; t <i*2; t++)
       
        Console.Write("*"); 
        Console.WriteLine();
        }
	Console.ReadLine();    
   }
 }
}
